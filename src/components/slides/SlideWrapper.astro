---
import { slides } from "../../data/slides";
import SlideItem from "./SlideItem.astro";
type Props = {};
const {} = Astro.props;
---

<ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
  {
    slides.map((slide) => (
      <SlideItem
        id={slide.id}
        title={slide.title}
        description={slide.description}
        image={slide.image}
      />
    ))
  }
</ul>
